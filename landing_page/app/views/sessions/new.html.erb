<%= react_component("Sessions", {title: "Log in"}) %>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>

            <br></br>

            <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>

        <br></br>

        <p>Don't have an account? <a href="users/new" style="color: lightgreen"><strong><u>Create one here!</u></strong></a></p>
        <strong><u> <%= link_to "Home Page", root_url %>  </u></strong>
    </div>
</div> 

